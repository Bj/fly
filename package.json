  ],
  "dependencies": {
    "arrify": "^1.0.1",
    "chokidar": "^1.4.0",
    "clor": "^2.0.0",
    "co": "^4.5.4",
    "concat-with-sourcemaps": "^1.0.2",
    "debug": "^2.2.0",
    "deep-equal": "^1.0.1",
    "find-up": "^1.1.0",
    "flatten": "^1.0.2",
    "globby": "^4.0.0",
    "interpret": "^1.0.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "object-assign": "^4.0.1",
    "prettyjson": "^1.1.2",
    "rimraf": "^2.4.2",
    "source-map": "^0.5.3",
    "update-notifier": "^0.5.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.4",
    "fly-xo": "^1.0.2",
    "isparta": "^4.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2",
    "touch": "^1.0.0",
    "xo": "^0.12.0"
  },
  "scripts": {
    "coverage": "isparta cover test/*.js",
    "coveralls": "npm run coverage -s && coveralls < coverage/lcov.info",
    "postcoveralls": "rimraf coverage",
    "test": "xo && node --harmony `which tape` test/*.js | `which tspec`"
  },
  "keywords": [
    "cli",
    "task",
    "build",
    "async",
    "await",
    "minify",
    "uglify",
    "promise",
    "pipeline",
    "generator",
    "coroutine",
    "automation",
    "build system",
    "task runner"
  ],
  "engines": {
    "iojs": ">= 1.0.0",
    "node": ">= 0.12.0"
  },
  "xo": {
    "semicolon": false,
    "ignore": [
      "examples/**/*.js"
    ],
    "rules": {
      "no-loop-func": 0
    }
  }
}
